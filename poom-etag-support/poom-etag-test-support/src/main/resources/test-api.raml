#%RAML 1.0
title: Test Api
version: 1
baseUri: https://api.codingmatters.org/test
mediaType: application/json

annotationTypes: !include https://raw.githubusercontent.com/flexiooss/poom-api-specs/1.9.0/apis/core/annotation-types/codingmatters.raml


/:
  displayName: resource
  get:
    (conforms-to): ["org.codingmatters.poom.etag.api.ETaggedReadRequest"]
    is: [entityRetrieve: {entityType: object, error: Error}, etagged-read: {}]

  put:
    (conforms-to): ["org.codingmatters.poom.etag.api.ETaggedChangeRequest"]
    is: [entityRetrieve: {entityType: object, error: Error}, etagged-change: {}]

types:
  Message: !include https://raw.githubusercontent.com/flexiooss/poom-api-specs/1.9.0/apis/core/types/message.raml
  Error: !include https://raw.githubusercontent.com/flexiooss/poom-api-specs/1.9.0/apis/core/types/error-with-messages.raml

traits:
  etagged-read: !include https://raw.githubusercontent.com/flexiooss/poom-api-specs/1.9.0/apis/core/traits/etagged/etagged-read.raml
  etagged-change: !include https://raw.githubusercontent.com/flexiooss/poom-api-specs/1.9.0/apis/core/traits/etagged/etagged-change.raml
  entityRetrieve: !include https://raw.githubusercontent.com/flexiooss/poom-api-specs/1.9.0/apis/core/traits/entity/retrieve.raml
